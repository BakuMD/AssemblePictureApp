<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#cbb892" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#7a6849" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#e7d8b2"
                android:endColor="#d8c399"
                android:angle="90" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#9c845e" />
        </shape>
    </item>
</selector>