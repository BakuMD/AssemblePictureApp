<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3A463B"
                android:endColor="#212921"
                android:angle="90" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#657365" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="#151F16" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="3dp"
                android:color="#0A120B"
                android:dashWidth="6dp"
                android:dashGap="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000040"
                android:endColor="#00000000"
                android:angle="45" />
            <corners android:radius="10dp" />
        </shape>
    </item>


    <item android:gravity="center">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="4dp"
                    android:color="#FF0000" />
                <size
                    android:width="20dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="center">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="4dp"
                    android:color="#FF0000" />
                <size
                    android:width="20dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
